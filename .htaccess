Options -Indexes

<IfModule mod_rewrite.c>
RewriteEngine On
RewriteCond %{HTTPS} !=on
RewriteCond %{HTTP:X-Forwarded-Proto} !https [NC]
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

RewriteCond %{DOCUMENT_ROOT}/install/LOCK -f
RewriteRule ^install/ - [F]
</IfModule>

<FilesMatch "(^\\.|\\.(env|ini|log|sql|bak|zip|tar\\.gz|tgz)$|^config\\.sample\\.php$)">
  Require all denied
</FilesMatch>

RedirectMatch 404 ^/\.git

<IfModule mod_headers.c>
  Header always unset Content-Security-Policy-Report-Only
  Header set X-Content-Type-Options "nosniff"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  Header set Permissions-Policy "geolocation=(self), microphone=(), camera=()"
  Header set X-Frame-Options "DENY"
</IfModule>
